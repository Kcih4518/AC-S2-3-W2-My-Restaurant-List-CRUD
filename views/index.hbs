<!-- search bar -->
<div class='container search-bar'>
  <div class='search-bar-outer'>
    <div class='row'>
      <form action='/restaurants/search' class='col-12 col-lg-8'>
        <div class='search-bar-inner'>
          <h4 class='mb-2'>尋找餐廳：</h4>
          <div class='input-group'>
            <input
              type='text'
              name='keyword'
              class='form-control'
              placeholder='輸入餐廳、分類'
              aria-label='Restaurant Name...'
              value='{{keyword}}'
              aria-describedby='search-button'
            />
            <div class='input-group-append'>
              <button class='btn btn-major' type='submit' id='search-button'><i
                  class='fas fa-search'
                ></i></button>
            </div>
          </div>
        </div>
      </form>
      <form
        class='col-4 col-lg-4 d-flex flex-column justify-content-end'
        action='/restaurants/sort'
      >
        <div class='search-bar-inner'>
          <select
            class='form-control'
            id='sort'
            name='sortOption'
            onchange='submit()'
          >
            <option >選擇排序</option>
            {{#each sortList}}
              <option value='{{this.value}}' {{#isEqual this.value ../sortOption}} selected{{/isEqual}}>{{this.selectName}}</option>
            {{/each}}
          </select>
        </div>
      </form>
    </div>
  </div>
</div>

{{! Error handle: When no relevant restaurant can be found }}
{{#if error}}
  <div
    class='alert container d-flex justify-content-center align-items-center mt-5'
  >
    <i class='fas fa-exclamation-triangle mr-3'></i>
    <span>{{error}}</span>
  </div>
{{/if}}

<!-- restaurant list -->
<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-10 col-12 mx-auto'>
      <div class='card-columns'>
        {{#each restaurants}}
          <div class='restaurants-info' style='display: inline-block;'>
            <a
              href='/restaurants/{{this._id}}'
              class='text-secondary'
              style='text-decoration:none;'
            >
              <div class='card mb-1'>
                <img
                  class='card-img-top'
                  src='{{this.image}}'
                  alt='{{this.name}}'
                />
                <div class='card-body p-3'>
                  <h6 class='card-title mb-1'>{{this.name}}</h6>

                  <div class='restaurant-category mb-1'>
                    <i class='fas fa-utensils pr-2'></i>
                    {{this.category}}
                  </div>

                  <span
                    class='badge badge-pill badge-danger font-weight-normal'
                  >
                    {{this.rating}}
                    <i class='fas fa-star fa-xs'></i>
                  </span>

                </div>
              </div>
            </a>
            <div
              class='container d-flex justify-content-end align-items-center p-0 mb-3'
              role='group'
            >
              <a class='mr-3' href='/restaurants/{{this._id}}/edit'>edit</a>
              <a class='mr-3' href='/restaurants/{{this._id}}'>detail</a>
              <a
                type='button'
                class='btn btn-danger'
                style='color:#fff'
                data-toggle='modal'
                data-target='#modal-{{this._id}}'
              >delete</a>
            </div>
          </div>

          <!-- Modal -->
          <div
            class='modal fade'
            id='modal-{{this._id}}'
            tabindex='-1'
            role='dialog'
            aria-labelledby='deleteModalCenterTitle'
            aria-hidden='true'
          >
            <div class='modal-dialog modal-dialog-centered' role='document'>
              <div class='modal-content'>
                <div class='modal-header'>
                  <h5
                    class='modal-title'
                    id='deleteModalCenterTitle'
                  >{{this.name}}</h5>
                  <button
                    type='button'
                    class='close'
                    data-dismiss='modal'
                    aria-label='Close'
                  >
                    <span aria-hidden='true'>&times;</span>
                  </button>
                </div>
                <div class='modal-body'>
                  確認要將「{{this.name}}」刪除嗎？
                </div>
                <div class='modal-footer'>
                  <form
                    action='/restaurants/{{this._id}}/?_method=DELETE'
                    method='POST'
                  >
                    <button
                      type='submit'
                      class='btn btn-outline-danger'
                    >delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

