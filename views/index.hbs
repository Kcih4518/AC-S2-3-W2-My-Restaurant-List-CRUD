{{! FIXME: RWD在小於575px時卡片顯示會有錯位 }}
<!-- search bar -->
<div class='container search-bar'>
  <div class='search-bar-outer'>
    <div class='search-bar-inner'>
      <form action='/restaurants/searches'>
        <h4 class='mb-2'>尋找餐廳：</h4>
        <div class='input-group'>
          <input
            type='text'
            name='keyword'
            class='form-control'
            placeholder='輸入餐廳、分類'
            aria-label='Restaurant Name...'
            value='{{keyword}}'
            aria-describedby='search-button'
          />
          <div class='input-group-append'>
            <button class='btn btn-major' type='submit' id='search-button'><i
                class='fas fa-search'
              ></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

{{! Error handle: When no relevant restaurant can be found }}
{{#if error}}
  <div
    class='alert container d-flex justify-content-center align-items-center mt-5'
  >
    <i class='fas fa-exclamation-triangle mr-3'></i>
    <span>{{error}}</span>
  </div>
{{/if}}

<!-- restaurant list -->
<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-10 col-12 mx-auto'>
      <div class='card-columns'>
        {{#each restaurants}}
          <div class='restaurants-info' style='display: inline-block;'>
            <a
              href='/restaurants/{{this._id}}'
              class='text-secondary'
              style='text-decoration:none;'
            >
              <div class='card mb-1'>
                <img
                  class='card-img-top'
                  src='{{this.image}}'
                  alt='{{this.name}}'
                />
                <div class='card-body p-3'>
                  <h6 class='card-title mb-1'>{{this.name}}</h6>

                  <div class='restaurant-category mb-1'>
                    <i class='fas fa-utensils pr-2'></i>
                    {{this.category}}
                  </div>

                  <span
                    class='badge badge-pill badge-danger font-weight-normal'
                  >
                    {{this.rating}}
                    <i class='fas fa-star fa-xs'></i>
                  </span>

                </div>
              </div>
            </a>
            <div
              class='container d-flex justify-content-end align-items-center p-0 mb-3'
              role='group'
            >
              <a class='mr-3' href='/restaurants/{{this._id}}/edit'>edit</a>
              <a class='mr-3' href='/restaurants/{{this._id}}'>detail</a>
              <form action='/restaurants/{{this._id}}/delete' method='POST'>
                <button
                  type='submit'
                  class='btn btn-outline-danger'
                >delete</button>
              </form>
            </div>

          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

{{! Only valid when both keyword and error are false }}
{{!-- turnOnAddButton : Please ref : helpers/handlebars.js --}}
{{#if (turnOnAddButton keyword error)}}
  {{! Add button }}
  <a href='/restaurants/add' class='btn btn-info btn-lg btn-add'>
    <i class='fas fa-plus'></i>
  </a>
{{else}}
  {{! Back button }}
  <a href='/' class='btn btn-warning btn-lg btn-back'>
    <i class='fas fa-undo'></i>
  </a>
{{/if}}